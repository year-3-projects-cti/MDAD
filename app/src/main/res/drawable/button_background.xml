<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#3A3A3A" /> <!-- Darker shade on press -->
            <corners android:radius="16dp" /> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="#FFFFFF" /> <!-- Border -->
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#292929" /> <!-- Slightly darker when focused -->
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="#AAAAAA" /> <!-- Border for focus -->
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2E2E2E" /> <!-- Default background -->
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="#FFFFFF" />
        </shape>
    </item>
</selector>