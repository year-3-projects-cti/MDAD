<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_class"
    android:background="#f8f8f8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Section (Header) -->
        <RelativeLayout
            android:id="@+id/top_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_shape"
            android:backgroundTint="@color/yellow"
            android:elevation="4dp"

            android:padding="30dp">

            <!-- Left: Class Name -->
            <TextView
                android:id="@+id/class_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="40sp"
                android:fontFamily="@font/fredoka_bold"
                android:textStyle="bold"
                android:textColor="#000"
                android:paddingTop="30dp"
                android:layout_alignParentStart="true" />

            <!-- Right: Info Text -->
            <TextView
                android:id="@+id/info_text"
                android:paddingTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:fontFamily="@font/fredoka"
                android:textStyle="normal"
                android:textColor="#000"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:textAlignment="viewEnd" />
        </RelativeLayout>

        <!-- Main Content Section -->

        <LinearLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:padding="16dp">

            <!-- First Column -->
            <LinearLayout
                android:id="@+id/left_column"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/mid_shape"
                    android:backgroundTint="@color/orange"
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    android:paddingLeft="20dp"
                    android:minHeight="220dp"
                    android:radius="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fredoka_medium"
                        android:text="Notes"
                        android:textColor="#000"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/notes_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fredoka_condensedlight"
                        android:text="aduc calculator la examen\ncumpar apa pentru prietenul meu"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </LinearLayout>

                <Button
                    android:id="@+id/add_to_calendar_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:backgroundTint="@color/yellow"
                    android:background="@drawable/mid_shape"
                    android:fontFamily="@font/fredoka_regular"
                    android:text="Add to Calendar"
                    android:textColor="#000"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/mid_shape"
                    android:backgroundTint="@color/orange"
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    android:paddingLeft="20dp"
                    android:minHeight="220dp"
                    android:radius="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fredoka_medium"
                        android:text="To Do"
                        android:textColor="#000"
                        android:textSize="18sp"
                        />

                    <TextView
                        android:id="@+id/to_do_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fredoka_condensedlight"
                        android:text="aduc calculator la examen\ncumpar apa pentru prietenul meu"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <!-- Second Column -->
            <LinearLayout
                android:id="@+id/right_column"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Alte elemente din layout -->

                    <fragment
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="158dp"
                        android:layout_height="132dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_margin="8dp"
                        android:background="@drawable/mid_shape" />

                </androidx.constraintlayout.widget.ConstraintLayout>




                <!-- Room Button -->

                <!-- Deadlines Section -->
                <Button
                    android:id="@+id/show_room_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/mid_shape"
                    android:fontFamily="@font/fredoka_regular"
                    android:text="Get Directions"
                    android:textColor="#000"
                    app:backgroundTint="@color/yellow" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/mid_shape"
                    android:backgroundTint="@color/orange"
                    android:minHeight="300dp"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fredoka_medium"
                        android:text="Deadlines"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        />

                    <TextView
                        android:id="@+id/deadlines_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19th Dec - Partial Exam"
                        android:fontFamily="@font/fredoka_condensedlight"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1st Jan - Homework 1"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </LinearLayout>
</ScrollView>
