<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    >


    <!-- Top Section: Cancel, Title, Add -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Cancel Button -->
        <TextView
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@android:color/holo_red_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/fredoka_regular"
            android:textSize="20sp"
            />

        <!-- Day Selection Title -->
        <TextView
            android:id="@+id/day_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuesday"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/fredoka_bold"
            android:textSize="26sp"
            app:layout_constraintStart_toEndOf="@id/cancel_button"
            app:layout_constraintEnd_toStartOf="@id/add_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5" />

        <!-- Add Button -->
        <TextView
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textColor="@color/green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/fredoka_regular"
            android:textSize="20sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/content_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_section"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Type Selector -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:gravity="center_horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/course_button"
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Course"
                    android:gravity="center"
                    android:background="@drawable/button_background"
                    android:padding="8dp"
                    android:textColor="@color/green"
                    android:fontFamily="@font/fredoka_light"
                    android:textSize="18sp"
                    />

                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:background="#1E1E1E" />

                <TextView
                    android:id="@+id/lab_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lab."
                    android:gravity="center"
                    android:background="@drawable/button_background"
                    android:padding="8dp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/fredoka_light"
                    android:textSize="18sp"
                    />

                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:background="#1E1E1E" />

                <TextView
                    android:id="@+id/seminar_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Seminar"
                    android:gravity="center"
                    android:background="@drawable/button_background"
                    android:padding="8dp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/fredoka_light"
                    android:textSize="18sp"/>

                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:background="#1E1E1E" />

                <TextView
                    android:id="@+id/other_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Other"
                    android:gravity="center"
                    android:background="@drawable/button_background"
                    android:padding="8dp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/fredoka_light"
                    android:textSize="18sp"/>
                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:background="#1E1E1E" />
            </LinearLayout>

            <!-- Title Input -->
            <EditText
                android:id="@+id/title_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Class Title"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/fredoka_medium"
                android:textSize="18sp"/>

            <!-- Time Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/start_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Start Time"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#AAAAAA"
                    android:fontFamily="@font/fredoka_light"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â†’"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:layout_marginHorizontal="8dp"
                    />

                <EditText
                    android:id="@+id/end_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="End Time"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#AAAAAA"
                    android:fontFamily="@font/fredoka_light"
                    android:textSize="18sp"/>
            </LinearLayout>

            <EditText
                android:id="@+id/room_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Room"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:layout_marginBottom="60dp"
                android:fontFamily="@font/fredoka_medium"
                android:textSize="18sp"
                />

            <!-- Teacher Card -->
            <EditText
                android:id="@+id/teacher_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Teacher"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/fredoka_medium"
                android:textSize="18sp"/>
            <!-- TODO Card -->
            <EditText
                android:id="@+id/todo_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="To Do (Ex. Read Chapter 1)"
                android:background="@drawable/edittext_background"
                android:padding="40dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/fredoka_light"
                android:textSize="18sp"/>
            <!-- Deadlines Card -->
            <EditText
                android:id="@+id/deadlines_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Deadlines (Ex. Exam- 1/1/2022)"
                android:background="@drawable/edittext_background"
                android:padding="30dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:layout_marginBottom="60dp"
                android:fontFamily="@font/fredoka_light"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/notes_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/fredoka_light"
                android:hint="Notes (Ex. Bring a calculator)"
                android:padding="80dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/selector_color"
        app:itemTextColor="@color/selector_color"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>